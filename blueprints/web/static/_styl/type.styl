@import commons

$color = $gray-dark
$color-muted = $gray-light
$font-family-monospace = Monaco, Menlo, Consolas, "Courier New", monospace
$font-family-sans-serif = "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif

$color-hover($color, $darken=10%)
    color $color

    a&:hover
        color darken(@color, $darken)

/* Element selectors */

a
    color $color-primary
    text-decoration none

    &:hover
        color darken(@color, 15%)
        text-decoration underline

abbr[title]
    border-bottom-color $gray-light
    cursor help

    &.initialism
        font-size 90%
        text-transform uppercase

address
    display block
    font-style normal
    line-height $line-height
    margin-bottom $line-height

body
    background-color $background-color
    color $color
    font-family $font-family-sans-serif
    font-size $font-size
    line-height $line-height

code
    background-color #f7f7f9
    border 1px solid #e1d1d8
    border-radius 3px unless $ui-squared
    color #d14
    font-family $font-family-monospace
    font-size ($font-size - 2)
    padding 2px 4px
    white-space nowrap

dd
    line-height $line-height
    margin-left ($line-height / 2)

dl
    margin-bottom $line-height

dt
    font-weight bold
    line-height $line-height

h1,
h2,
h3,
h4,
h5,
h6
    font-weight bold
    line-height $line-height
    margin ($line-height / 2) 0
    text-rendering optimizelegibility

    small
        color $gray-light
        font-weight normal
        line-height 1

h1,
h2,
h3
    line-height ($line-height * 2)

h1
    font-size ($font-size * 2.75)

h2
    font-size ($font-size * 2.25)

h3
    font-size ($font-size * 1.75)

h4
    font-size ($font-size * 1.25)

h5
    font-size $font-size

h6
    font-size ($font-size * .85)

hr
    border 0
    border-bottom 1px solid $background-color
    border-top 1px solid $gray-lighter
    margin $line-height 0

li
    line-height $line-height

ol,
ul
    margin 0 0 ($line-height / 2) ($line-height + 5)
    padding 0

    ol,
    ul
        margin-bottom 0

    &.unstyled
        list-style none
        margin-left 0

p
    margin 0
    margin-bottom ($line-height / 2)

    &.lead
        font-size ($font-size * 1.5)
        font-weight 200
        line-height ($line-height * 1.5)
        margin-bottom $line-height

small
    font-size 85%

/* Class selectors */

.error
    $color-hover($color-error)

.info
    $color-hover($color-info)

.muted
    color $color-muted

.success
    $color-hover($color-success)

.warning
    $color-hover($color-warning)

h1.title
    border-bottom 1px solid $gray-lighter
    line-height ($line-height * 2.5)
    margin $line-height 0 ($line-height * 1.5)
    padding-bottom ($line-height / 2) - 1

pre.code
    @extend code
    background-color #f5f5f5
    border-radius $border-radius unless $ui-squared
    color $gray-dark
    font-size ($font-size - 1)
    line-height $line-height
    margin 0 0 ($line-height / 2)
    padding (($line-height - 1) / 2)
    white-space pre-wrap
    word-break break-all
