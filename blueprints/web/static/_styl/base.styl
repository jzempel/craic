@import nib
@import commons

/* Element selectors */

hr
    margin ($gutter * 2) 0

/* Class selectors */

.example
    background-color $background-color
    border 1px solid #ddd
    border-radius $border-radius
    margin 15px 0
    padding 39px 19px 14px
    position relative

    &:after
        background-color #f5f5f5
        border 1px solid #ddd
        border-radius $border-radius 0
        color #9da0a4
        content "Example"
        left -1px
        font-size ($font-size - 2)
        font-weight bold
        padding 3px 7px
        position absolute
        top -1px

    p:last-child
        margin-bottom 0

    pre.code
        background-color #f7f7f9
        border-radius top 0
        margin-bottom -15px
        margin-left -($gutter)
        margin-right -($gutter)
        margin-top 14px
        padding 8px

.prettyprint

    &.linenums
        box-shadow inset 40px 0 0 #fbfbfc, inset 41px 0 0 #ececf0

        ol.linenums
            margin 0 0 0 33px

            & > li
                color #bebec5
                padding-left 12px
                text-shadow 0 1px 0 #fff

    .atn,
    .dec,
    .typ,
    .var
        color teal

    .atv,
    .str
        color #d14

    .com
        color #800

    .fun
        color red

    .kwd,
    .tag
        color #1e347b

    .lit
        color #066

    .pln
        color #48484c

    .pun,
    .opn,
    .clo
        color #93a1a1

h1.title
    color #5a5a5a
